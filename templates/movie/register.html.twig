{% extends 'base.html.twig' %}
{% block title %}
Registration
{% endblock %}
{% block navbar %}
<div class="d-flex flex-column form-container w-50 p-4" style="margin-left: 25%; background-color: rgba(17,8,0,0.15)">
    <form name="register-form" method="POST" action="/">
        <fieldset>
            <legend>Cr√©ation d'un nouveau compte</legend>
            <div class="form-group">
                <label class="form-label mt-4">Login</label>
                <input type="text" class="form-control" id="login" placeholder="Choose a username" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">First name</label>
                <input type="text" class="form-control" placeholder="John" required>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Last name</label>
                <input type="text" class="form-control" placeholder="Doe" required>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Gender</label>
                <select class="form-select" required>
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                    <option value="0">I prefer not to say</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label mt-4">Phone Number</label>
                <input type="tel" class="form-control" placeholder="0675968781" pattern="[0-9]{10}" required>
            </div>
            <div class="form-group">
                <label class="form-label mt-4 mb-4">Date of birth</label>
                <input type="date" class="form-control" value="2018-07-22" required>
            </div>
            <!--Champ qui va contenir la concatenation hasher du login, mot de passe et du challenge-->
            <input hidden type='hidden' name="code" id="code">
            <button type="submit" class="btn btn-primary mt-5">Submit</button>
        </fieldset>
    </form>
</div>
{% endblock %}